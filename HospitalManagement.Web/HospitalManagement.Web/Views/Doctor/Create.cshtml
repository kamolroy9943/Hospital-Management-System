                            @Html.DropDownListFor(model => model.Departments, ViewBag.Departmentlist as SelectList, "-- Select Department --", new { @class = "form-control",style= "height=40px" })
                            @Html.ValidationMessageFor(model => model.Departments, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="input-group">
                        @Html.LabelFor(model => model.Degrees, htmlAttributes: new { @class = " col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Degrees, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Degrees, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="input-group">
                        @Html.LabelFor(model => model.SurgeryOrMedicine, htmlAttributes: new { @class = " col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.SurgeryOrMedicine, new List<SelectListItem>
{
    new SelectListItem{ Text="Surgery", Value = "1" },
    new SelectListItem{ Text="Medicine", Value = "2" },

 })
