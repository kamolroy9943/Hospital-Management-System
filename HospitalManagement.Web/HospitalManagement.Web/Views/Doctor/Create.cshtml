                            @Html.EditorFor(model => model.JoinningDate, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.JoinningDate, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div class="input-group">
                        @Html.LabelFor(model => model.ImagePath, htmlAttributes: new { @class = " col-md-2" })
                        <div class="col-md-10">

                            <input type="file" id="ImageFile" name="ImageFile" required />

                        </div>
                    </div>

                    <div class="input-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }


            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>

