@model HospitalManagement.Data.Doctor

@{
    ViewBag.Title = "Create";
}
<section class="content home">
    <div class="container-fluid">
        <div class="block-header">

            <h2>Create</h2>

            @using (Html.BeginForm("Create", "Doctor", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {


                <div class="form-horizontal">
                    <h4>Doctor</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="input-group">
                        @Html.LabelFor(model => model.DoctorName, htmlAttributes: new { @class = " col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.DoctorName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DoctorName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="input-group">
                        @Html.LabelFor(model => model.age, htmlAttributes: new { @class = " col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.age, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.age, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="input-group">
                        @Html.LabelFor(model => model.Salary, htmlAttributes: new { @class = " col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Salary, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.age, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="input-group">
                        @Html.LabelFor(model => model.Contact, htmlAttributes: new { @class = " col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Contact, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Contact, "", new { @class = "text-danger" })

                        </div>
                    </div>

                    <div class="input-group">

                        @Html.LabelFor(model => model.ContactNo, htmlAttributes: new { @class = " col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ContactNo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ContactNo, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="input-group">
                        @Html.LabelFor(model => model.ContactEmail, htmlAttributes: new { @class = " col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ContactEmail, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ContactEmail, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="input-group">
                        @Html.LabelFor(model => model.Departments, htmlAttributes: new { @class = " col-md-2" })
