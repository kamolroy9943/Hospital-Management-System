@model IEnumerable<HospitalManagement.Data.Doctor>

@{
    ViewBag.Title = "Index";
}

<section class="content home">
    <div class="container-fluid">
        <div class="block-header">
            <h2>Index</h2>

            <p>
                @Html.ActionLink("Create New", "Create")||@Html.ActionLink("Retired Doctore List", "RetiredList")
            </p>
            <table class="table">
                <tr>
                    <th>
                        @*Its here*@
                        @Html.DisplayNameFor(model => model.DoctorName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.age)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Salary)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Contact)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ContactNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ContactEmail)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Departments)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Degrees)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SurgeryOrMedicine)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.JoinningDate)
                    </th>
                    <th>
                        Image
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Updated)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UpdatedBy)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DoctorName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.age)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Salary)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Contact)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactEmail)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Departments)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Degrees)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SurgeryOrMedicine)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.JoinningDate)
                        </td>
                        <td>
                            <img src=" @Url.Content(item.ImagePath)" width="50" height="50" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Updated)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UpdatedBy)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }

            </table>

            </div></div></section>