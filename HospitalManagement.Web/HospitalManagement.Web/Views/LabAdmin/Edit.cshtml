@model HospitalManagement.Data.LabReport

@{
    ViewBag.Title = "Edit";
}
<section class="content home">
    <div class="container-fluid">
        <div class="block-header">
            <h2>Edit</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
