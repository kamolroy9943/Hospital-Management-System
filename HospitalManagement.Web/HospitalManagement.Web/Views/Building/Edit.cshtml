@model HospitalManagement.Data.Building

@{
    ViewBag.Title = "Edit";
}


<section class="content home">
    <div class="container-fluid">
        <div class="block-header">
            <h2>Edit</h2>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Building</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)
                    <div class="input-group">
                        @Html.LabelFor(model => model.BuildingName, htmlAttributes: new { @class = " col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.BuildingName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.BuildingName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                   
                    <div class="input-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
            </div>
        </div>
    </section>
