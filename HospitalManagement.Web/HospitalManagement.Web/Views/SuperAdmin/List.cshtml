@model IEnumerable<HospitalManagement.Data.AdminRole>

@{
    ViewBag.Title = "List";
}
<section class="content home">
    <div class="container-fluid">
        <div class="block-header">
            <h2>List</h2>

            
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Role)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsAssigned)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsBlocked)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Updated)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UpdatedBy)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Role)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsAssigned)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsBlocked)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Updated)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UpdatedBy)
                        </td>
                        <td>
                            @{
                                if (item.Role == "FloorAdmin")
                                {
                                    if (item.IsAssigned == "Not")
                                    {
                                        @Html.ActionLink("Assign to a Floor |", "AssignToFloor", new { id = item.Id })
                                    }
                                    else
                                    {
                                        @Html.ActionLink("Update / Change Floor |", "AssignToFloor", new { id = item.Id })
                                    }
                                }
                                else if (item.Role == "LabAdmin")
                                {
                                    if (item.IsAssigned == "Not")
                                    {
                                        @Html.ActionLink("Assign to a Lab |", "AssignToLab", new { id = item.Id })
                                    }
                                    else
                                    {
                                        @Html.ActionLink("Update / Change Lab |", "AssignToFloor", new { id = item.Id })
                                    }
                                }
                                else if (item.Role == "TicketAdmin")
                                {
                                    if (item.IsAssigned == "Not")
                                    {
                                        @Html.ActionLink("Assign to a Ticket Counter |", "AssignToCounter", new { id = item.Id })
                                    }
                                    else
                                    {
                                        @Html.ActionLink("Update / Change Ticket Counter |", "AssignToCounter", new { id = item.Id })
                                    }
                                }
                                else if (item.Role == "SuperAdmin")
                                {

                                    

                                }
                                else if (item.Role == "BillAdmin")
                                {
                                    if (item.IsAssigned == "Not")
                                    {
                                        @Html.ActionLink("Assign to a Bill Counter |", "AssignToBill", new { id = item.Id })
                                    }
                                    else
                                    {
                                        @Html.ActionLink("Update / Change Bill Counter |", "AssignToBill", new { id = item.Id })
                                    }
                                }


                            }
                            @{
                                if (item.IsBlocked == "Active")
                                {
                                    @Html.ActionLink("Block this Admin", "Blocking", new { id = item.Id })
                                }
                                else
                                {
                                    @Html.ActionLink("Active this Admin", "Blocking", new { id = item.Id })
                                }
                            }
                           
                        </td>
                    </tr>
                }

            </table>
            </div></div></section>