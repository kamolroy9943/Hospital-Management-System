@model HospitalManagement.Data.Department

@{
    ViewBag.Title = "FromFloorCreate";
}
<section class="content home">
    <div class="container-fluid">
        <div class="block-header">
            <h2>FromFloorCreate</h2>

            @using (Html.BeginForm("FromFloorCreate", "Department", new { FloorId = @ViewBag.FloorId, BuildingId = @ViewBag.BuildingId }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4> Add department  in @ViewBag.BuildingName Building in @ViewBag.FloorNumber th floor </h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="input-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = " col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>




                    <div class="input-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Add" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }

            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
            </div></div></section>